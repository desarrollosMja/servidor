    <table class="table table-dark" style="width: 700px; margin: 30px;">
        <thead>
          <tr>
            <th scope="col">NOMBRE</th>
            <th scope="col">PRECIO</th>
            <th scope="col">FOTO</th>
          </tr>
        </thead>
        <tbody>
        {{#if hayProductos}} 
        
            {{#each productos}} 
        
          <tr>
            <td>{{this.nombre}}</td>
            <td>{{this.precio}}</td>
            <td><img src={{this.urlFoto}} alt="" style="width: 50px;height: auto;"></img></td>
          </tr>

            {{/each}}
        
        {{else}}
            <div class="alert alert-warning" role="alert">
                No hay productos cargados!
            </div>

        {{/if}}
        </tbody> 
      </table>

      <a href="/" class="btn btn-primary">Ir a cargar productos</a>
    
    