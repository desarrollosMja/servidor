html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        title="Productos con PUG"
    body
        table(class="table table-dark", style="width: 700px; margin: 30px;")
            thead
                tr
                    th(scope="col")="NOMBRE"
                    th(scope="col")="PRECIO"
                    th(scope="col")="FOTO"
            tbody
                if productos.length > 0
                    each elem in productos
                        tr
                            td=elem.nombre
                            td=elem.precio 
                            td
                                img(src=elem.urlFoto, style="width: 50px;height: auto;")
                else
                    div(class="alert alert-warning", role="alert")="No hay productos cargados!"
        a(href="/", class="btn btn-primary")="Ir a cargar productos" 
                       
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
