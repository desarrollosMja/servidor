html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        title="Productos con PUG"
    body
        h1="Formulario de ingreso de productos"
        hr
    form(action="http://localhost:8080/productos", method="post", name="form-data", style="width: 600px; margin: 50px;")
        div(class="mb-3")
            label(for="exampleInputEmail1", class="form-label")="Nombre del producto"
            input(type="text", class="form-control", id="exampleInputEmail1", aria-describedby="emailHelp", name="nombre")
        div(class="mb-3")
            label(for="exampleInputPassword1", class="form-label")="Precio"
            input(type="number", class="form-control", id="exampleInputPassword1", name="precio")
        div(class="mb-3")
            label(for="exampleInputPassword1", class="form-label")="URL foto"
            input(type="text", class="form-control", id="exampleInputPassword1", name="urlFoto")
        button(type="submit", class="btn btn-primary")="Submit"
    a(href="/productos", class="btn btn-primary")="Ver productos"
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
    
